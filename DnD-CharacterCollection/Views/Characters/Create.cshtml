@model Character
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<div>
    <h1>Create Character</h1>
    <hr />
    <form asp-action="Create">
        <div id="formFields" class="flex">
            <div id="characteristicsField">
                <div class="formHeader">Characteristics</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Name</span>
                    </div>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Age</span>
                    </div>
                    <input asp-for="Age" class="form-control" />
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Race</span>
                    </div>
                    <select asp-for="Race" class="form-control" asp-items="ViewBag.Races">
                        <option selected disabled>Click to choose</option>
                    </select>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Class</span>
                    </div>
                    <select name="CharacterClass" asp-for="Class" class="form-control" asp-items="ViewBag.Classes">
                        <option selected disabled>Click to choose</option>
                    </select>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Alignment</span>
                    </div>
                    <select asp-for="Alignment" class="form-control" asp-items="ViewBag.Alignments">
                        <option selected disabled>Click to choose</option>
                    </select>
                </div>
            </div>
            <div id="statisticsField">
                <div id="acAndHp">
                    <div class="formHeader">Character Statistics</div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">AC</span>
                        </div>
                        <input asp-for="ArmorClass" class="form-control" />
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Max HP</span>
                        </div>
                        <input asp-for="MaxHitPoints" class="form-control" />
                    </div>
                </div>
                <div id="abilityScores">
                    <div class="formHeader">Ability scores</div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Str</span>
                        </div>
                        <input name="Strength" type="number" min="1" max="20" value="10" class="form-control" />
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Dex</span>
                        </div>
                        <input name="Dexterity" type="number" min="1" max="20" value="10" class="form-control" />
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Con</span>
                        </div>
                        <input name="Constitution" type="number" min="1" max="20" value="10" class="form-control" />
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Int</span>
                        </div>
                        <input name="Intelligence" type="number" min="1" max="20" value="10" class="form-control" />
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Wis</span>
                        </div>
                        <input name="Wisdom" type="number" min="1" max="20" value="10" class="form-control" />
                    </div>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Cha</span>
                        </div>
                        <input name="Charisma" type="number" min="1" max="20" value="10" class="form-control" />
                    </div>
                </div>
            </div>
            <div id="wealthField">
                <div class="formHeader">Wealth</div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">CP</span>
                    </div>
                    <input name="Copper" type="number" min="0" value="0" class="form-control" />
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">SP</span>
                    </div>
                    <input name="Silver" type="number" min="0" value="0" class="form-control" />
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">GP</span>
                    </div>
                    <input name="Gold" type="number" min="0" value="0" class="form-control" />
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">PP</span>
                    </div>
                    <input name="Platinum" type="number" min="0" value="0" class="form-control" />
                </div>
            </div>
        </div>
        <div id="buttonField" class="form-group flex">
            <a asp-action="Index" class="btn btn-primary">Exit creation of new character</a>
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
