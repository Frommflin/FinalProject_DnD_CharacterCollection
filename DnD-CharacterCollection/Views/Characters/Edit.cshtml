@model Character

<h1>Level up!</h1>
<h4>@Model.Name is now level @ViewBag.NewLevel</h4>
<hr />
<form asp-action="Edit">
    <div id="levelUpForm" class="flex">
        <div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="NewLevel" value="@ViewBag.NewLevel" />
            <div class="form-group">
                <label asp-for="ArmorClass" class="control-label"></label>
                <input asp-for="ArmorClass" class="form-control input" />
                <span asp-validation-for="ArmorClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxHitPoints" class="control-label"></label>
                <input asp-for="MaxHitPoints" class="form-control input" />
                <span asp-validation-for="MaxHitPoints" class="text-danger"></span>
            </div>
        </div>
        @if (ViewBag.NewLevel == 4 || ViewBag.NewLevel == 8 || ViewBag.NewLevel == 12 || ViewBag.NewLevel == 16 || ViewBag.NewLevel == 19)
        {
            <div>
                <div class="formHeader">Ability scores</div>
                <div class="form-group">
                    <label asp-for="Attributes.Strength" class="control-label">Strength</label>
                    <input type="number" name="Strength" value="@Model.Attributes.Strength" min="1" max="20" class="form-control input" />
                </div>
                <div class="form-group">
                    <label asp-for="Attributes.Dexterity" class="control-label">Dexterity</label>
                    <input type="number" name="Dexterity" value="@Model.Attributes.Dexterity" min="1" max="20" class="form-control input" />
                </div>
                <div class="form-group">
                    <label asp-for="Attributes.Constitution" class="control-label">Constitution</label>
                    <input type="number" name="Constitution" value="@Model.Attributes.Constitution" min="1" max="20" class="form-control input" />
                </div>
                <div class="form-group">
                    <label asp-for="Attributes.Intelligence" class="control-label">Intelligence</label>
                    <input type="number" name="Intelligence" value="@Model.Attributes.Intelligence" min="1" max="20" class="form-control input" />
                </div>
                <div class="form-group">
                    <label asp-for="Attributes.Wisdom" class="control-label">Wisdom</label>
                    <input type="number" name="Wisdom" value="@Model.Attributes.Wisdom" min="1" max="20" class="form-control input" />
                </div>
                <div class="form-group">
                    <label asp-for="Attributes.Charisma" class="control-label">Charisma</label>
                    <input type="number" name="Charisma" value="@Model.Attributes.Charisma" min="1" max="20" class="form-control input" />
                </div>
            </div>
        }
    </div>
            
            
    <div id="editBtns" class="form-group">
        <input type="submit" value="Level up!" class="btn btn-outline-success" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
