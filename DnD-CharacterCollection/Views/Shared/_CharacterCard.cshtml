@model IEnumerable<Character>


<div class="characterList">
    <div class="createLink nav-link">
        <a asp-action="Create">Create New</a>
    </div>
    @foreach (Character character in Model)
    {
        <a class="characterCardLink nav-link" asp-action="Details" asp-route-id="@character.Id">
            <div class="characterCard">
                <div class="characterName">
                    @character.Name
                </div>
                <hr />
                <div class="characterCardInfo flex">
                    <div>
                        @character.Class
                    </div>
                    <div>
                        Level @character.Level
                    </div>
                </div>
            </div>
        </a>
    }
</div>

